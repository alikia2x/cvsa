{
	"lock": false,
	"workspace": ["./packages/crawler", "./packages/core"],
	"nodeModulesDir": "auto",
	"tasks": {
		"crawler": "deno task --filter 'crawler' all",
		"backend": "deno task --filter 'backend' start"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"proseWrap": "always"
	}
}
