{
	"lock": false,
	"workspace": [
		"./packages/crawler",
		"./packages/frontend",
		"./packages/backend",
		"./packages/core"
	],
	"nodeModulesDir": "auto",
	"tasks": {
		"crawler": "deno task --filter 'crawler' all"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"proseWrap": "always"
	}
}
